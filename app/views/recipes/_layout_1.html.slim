.col-start-3.col-span-13.h-92v.flex.flex-row
  .w-1/2.flex.flex-col
    = render 'header'
    .rounded-md.overflow-hidden.shadow-lg
      .aspect-w-4.aspect-h-5
        = recipe_image_for_layout1(@recipe)
    .h-8v
  .w-1/2.flex.flex-col.items-center data-controller="recipe"
    .min-h-10v.flex.flex-col.justify-center
      ul#recipe-nav.flex.flex-row.items-center.text-mustard.font-bold.text-2xl.rounded-md 
        li#ingredients-button.cursor-pointer.py-2.px-4.bg-gray-900.hover:bg-gray-700.rounded-l-md.selected data-action="click->recipe#ingredients" data-recipe-target="ingredients_button"
          = t("recipes.show.ingredients")
        li#method-button.cursor-pointer.py-2.px-4.bg-gray-900.hover:bg-gray-700 data-action="click->recipe#method" data-recipe-target="method_button"
          = t("recipes.show.method")
        li#comments-button.cursor-pointer.py-2.px-4.bg-gray-900.hover:bg-gray-700.rounded-r-md data-action="click->recipe#comments" data-recipe-target="comments_button"
          = t("recipes.show.comments")
    #recipe-field.w-full.h-full.border-r-2.border-mustard
      #ingredients-content data-recipe-target="ingredients_content"
        .m-16
          = render @ingredients_recipe, position: :center
      #method-content.hidden data-recipe-target="method_content"
        .text-center 
          = render 'description'
      #comments-content.hidden.h-74v.overflow-y-scroll.scrollbar-hide data-recipe-target="comments_content"
        = render 'comments/comments'
    .min-h-8v.w-full
